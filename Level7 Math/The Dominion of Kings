using System;

namespace Math
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter your amount of estates: ");
            int  estate = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter your amount of duchies: ");
            int duchies = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter your provinces: ");
            int provinces = Convert.ToInt32(Console.ReadLine());

            int score = estate * 1 + duchies * 3 + provinces * 6;
            Console.WriteLine("Your kingdom is " + score + " points worth. Now get your fellow kings to score theirs.");
        }
    }
}
