
namespace Math
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter the number of chocolate eggs: ");
            int eggCount = Convert.ToInt32(Console.ReadLine());
            int sisterCount = eggCount / 4;
            int bearCount = eggCount % 4;
            Console.WriteLine("Today each sister gets " + sisterCount + " eggs each.");
            if (bearCount == 0) Console.WriteLine("Duckbear will be sad today.");
            else Console.WriteLine("Duckbear will get " + bearCount + " eggs today.");
        }
    }
}

//Answer this question:
1,2,3,6,7,11
