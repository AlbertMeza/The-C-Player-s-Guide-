using System;

namespace Level10
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Welcome to my shop! My name is Tortuga, what would you like?");
            Console.WriteLine("Pick an option");
            Console.WriteLine("The folllowing items are available:");
            Console.WriteLine(" 1 - Rope \n 2 - Torches \n 3 - Climbing Equipment \n 4 - Clean Water \n 5 - Machete \n 6 - Canoe \n 7 - Food Supplies");
            Console.WriteLine("Please select an option from above");
            string option = Console.ReadLine();

            switch (option)
            {
                case "1":
                    Console.WriteLine("Rope: 10gold");
                    break;
                case "2":
                    Console.WriteLine("Torches: 15gold");
                    break;
                case "3":
                    Console.WriteLine("Climbing Equipment: 25gold");
                    break;
                case "4":
                    Console.WriteLine("Clean Water: 1gold");
                    break;
                case "5":
                    Console.WriteLine("Machete: 20gold");
                    break;
                case "6":
                    Console.WriteLine("Canoe: 200gold");
                    break;
                case "7":
                    Console.WriteLine("Food Supplies: 1gold");
                    break;
                default:
                    break;
            }

        }
    }
}
